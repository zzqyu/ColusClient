<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed-->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/md_red_600" />
            <stroke android:width="1dp" android:color="@color/md_red_700" />
            <corners android:radius="@dimen/rounded_corner_material_design" />
        </shape>
    </item>

    <!-- disabled-->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/md_red_500_disabled" />
            <stroke android:width="1dp" android:color="@color/md_red_600_disabled" />
            <corners android:radius="@dimen/rounded_corner_material_design" />
        </shape>
    </item>

    <!-- default-->
    <item>
        <shape>
            <solid android:color="@color/md_red_500" />
            <stroke android:width="1dp" android:color="@color/md_red_600" />
            <corners android:radius="@dimen/rounded_corner_material_design" />
        </shape>
    </item>

</selector>